@model CRM.Models.User
@{
    Layout = null;
}




<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Sign-Up/Login Form</title>
    <link href='https://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link href="~/style.css" rel="stylesheet" />
</head>

<body>
    <div class="form">

        <ul class="tab-group">
            <li class="tab"><a href="#signup">Sign Up</a></li>
            <li class="tab active"><a href="#login">Log In</a></li>
        </ul>

        <div class="tab-content">
            <div id="signup">
                <h1>Registro de usuario</h1>
                    @using (Html.BeginForm("register", "Login", FormMethod.Post))
                    {
                    <div class="top-row">
                        <div class="field-wrap">
                            <label>
                               Username<span class="req">*</span>
                            </label>
                            @Html.EditorFor(model => model.username)
                        </div>

                        <div class="field-wrap">
                            <label>
                                Email<span class="req">*</span>
                            </label>
                            @Html.EditorFor(model => model.email)
                        </div>
                    </div>

                    <div class="field-wrap">
                        <label>
                           Password<span class="req">*</span>
                        </label>
                        @Html.EditorFor(model => model.pass , new { htmlAttributes = new { @type = "password" } })
                    </div>

                    <div class="field-wrap">
                        <label>
                            Repita el password<span class="req">*</span>
                        </label>
                        @Html.EditorFor(model => model.repeatPass, new { htmlAttributes = new {  @type = "password" } })
                    </div>
                    
                    <input type="submit" name="name" value="Registrarse" />

                    <div class="field-wrap">
                        <label>
                            @Html.DisplayFor(model => model.errorMessage)
                        </label>

                    </div>
                    }


            <div id="login">
                <h1>Inicio de sesion</h1>

                @using (Html.BeginForm("Autherize", "Login", FormMethod.Post))
                {
                    <div class="field-wrap">
                        @Html.LabelFor(model => model.username)
                        @Html.EditorFor(model => model.username)
                    </div>

                    <div class="field-wrap">
                        @Html.LabelFor(model => model.pass)
                        @Html.EditorFor(model => model.pass, new { htmlAttributes = new { @type = "password" } })
                    </div>

                    
                    <div class="field-wrap">
                        <label>
                            @Html.DisplayFor(model => model.errorMessage)
                        </label>

                    </div>

                     <input type="submit" name="name" value="Login" />

                }

            </div>

        </div><!-- tab-content -->

    </div> <!-- /form -->
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="~/Scripts/index.js"></script>

</body>
</html>

